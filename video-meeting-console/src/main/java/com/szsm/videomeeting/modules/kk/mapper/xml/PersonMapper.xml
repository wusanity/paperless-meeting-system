<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.szsm.videomeeting.modules.kk.mapper.PersonMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.szsm.videomeeting.model.entity.Person">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="age" property="age" />
        <result column="email" property="email" />
    </resultMap>

    <select id="getList" resultMap="BaseResultMap">
        SELECT
        *
        FROM person
        WHERE
        1 = 1
        <if test="filter.id!=null and filter.id!=''">
            AND	id= #{filter.id}
        </if>
        <if test="filter.name!=null and filter.name!=''">
            AND	name LIKE '%${filter.name}%'
        </if>
        <if test="filter.age!=null and filter.age!=''">
            AND	name = #{filter.account}
        </if>
        <if test="filter.email!=null and filter.email!=''">
            AND	name = #{filter.account}
        </if>
        ORDER BY id DESC
    </select>
</mapper>
